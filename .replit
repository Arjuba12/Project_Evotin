modules = ["nodejs-20", "web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "E-Voting App"

[[workflows.workflow]]
name = "E-Voting App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"unset DATABASE_URL && cd backend && uvicorn app.main:app --host 127.0.0.1 --port 8000 --reload & cd frontend && npm run dev\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 8000
externalPort = 8000
exposeLocalhost = true

[[ports]]
localPort = 43991
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "unset DATABASE_URL && cd backend && uvicorn app.main:app --host 0.0.0.0 --port 8000 & cd frontend && npm run dev -- --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "pip install -r backend/requirements.txt && cd frontend && npm install && npm run build"]
